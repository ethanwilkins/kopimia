<% unless current_user %>
<div id="card">
	<div id="form_padding">
		<p id="sign_up_label">Log in</p>
		<%= link_to "Sign up", root_url, id: :already_signed_up %>
	<%= form_tag sessions_path do %>
		<p>
			<%= text_field_tag :email, nil, placeholder: "Email", class: "form-control" %>
		</p>
		<div class="input-group">
			<%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
			<span class="input-group-btn">
				<button class="btn btn-default" type="submit">
					<i class="glyphicon glyphicon-log-in"></i>
				</button>
			</span>
		</div>
		<div id="remember">
			Remember me <%= check_box_tag :remember_me, 1, params[:remember_me] %>
		</div>
	<% end %>
	</div>
</div>
<% end %>