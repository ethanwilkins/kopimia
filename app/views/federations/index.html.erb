<!-- federations -->

<table align="center">
	<tr>
		<% if @group.icon.url %>
		<td>
			<%= link_to image_tag(@group.icon, size: "50x50", id: :profile_picture), group_path(@group) %>
		</td>
		<% end %>
		<td>
			<h3 align="center"><%= @group.name %> Federations</h3>
		</td>
	</tr>
</table></br>

<% for federation in @federations %>
	<div id="card">
		<table align="center">
			<tr>
				<% if federation.icon.url %>
					<td><%= link_to image_tag(federation.icon), federation_path(federation) %></td>
				<% end %>
				<td><%= link_to federation.name, federation_path(federation) %></td>
			</tr>
		</table>
	</div>
<% end %>