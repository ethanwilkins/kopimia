<% if current_user %>
	<% if current_user.notifications.size > 0 %>
	<div id="large_button">
		<%= button_to "Clear all", clear_path(current_user), :method => "delete",
			class: "btn btn-default btn-lg btn-block", data: { confirm: 'Are you sure?' } %>
	</div>
	<% else %>
		<p align="center">You have zero notifications.</p>
	<% end %>
	<br>

	<% @notes.each do |note| %>
		<div id="card">
			<table align="center">
				<tr>
					<td><%= profile_picture(User.find(note.other_user), "25x25") %></td>
					<td>
						<% case note.action.to_sym %>
							<% when :follow %>
								<%= link_to note.message, user_path(note.other_user) %>
							<% when :message %>
								<%= link_to note.message, folder_path(note.item, user_id: note.other_user) %>
							<% when :comment, :up_vote %>
								<%= link_to note.message, show_post_path(note.user, note.item) %>
							<% when :share_post %>
								<!-- has to link to sharers post, not the original users -->
								<%= link_to note.message, show_post_path(note.other_user, note.item)%>
							<% when :comment_proposal %>
								<%= link_to note.message, group_proposal_path(Group.find( \
								Proposal.find(note.item).group_id), note.item) %>
						<% end %>
					</td>
				</tr>
			</table>
		</div><br>
	<% end %>
<% end %>