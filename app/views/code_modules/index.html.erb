<h1 align="center">Modules</h1>

<% @modules.each do |_module| %>
	<div id="card">
		<div align="center">
			<table align="center">
				<tr>
					<% if _module.icon.url %>
					<td>
						<%= link_to image_tag(_module.icon, size: "50x50"), group_code_module_path(@group, _module) %>
					</td>
					<% end %>
					<td>
						<%= link_to _module.name, group_code_module_path(@group, _module) %>
					</td>
				</tr>
			</table>
		</div>
	</div></br>
<% end %>

<% if @modules.empty? %>
	<div id="card">
		<div align="center">This group doesn't have any modules yet. Create proposal to add a module.
			To create a proposal, click <%= link_to "here", proposal_menu_path(@group) %>.</div>
	</div>
<% end %>