<% if @users %>
	<% @users.each do |user| %>
		<div id="card">
			<table align="center">
				<tr>
					<td>
						<%= link_to profile_picture(user, "25x25"), user_path(user) %>
					</td>
					<td>
						<%= link_to user.name.capitalize, user_path(user) %>
					</td>
				</tr>
			</table>
		</div>
	<% end %>
<% end %>

<% if @groups %>
	<% @groups.each do |group| %>
		<div id="card">
			<table align="center">
				<tr>
					<td>
						<%= link_to image_tag(group.icon, size: "25x25"), group_path(group) %>
					</td>
					<td>
						<%= link_to group.name.capitalize, group_path(group) %>
					</td>
				</tr>
			</table>
		</div>
	<% end %>
<% end %>