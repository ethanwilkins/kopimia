<% if @users %>
	<% @users.each do |user| %>
		<div id="card">
			<table align="center">
				<tr>
					<td>
						<%= profile_picture(user, "25x25") %>
					</td>
					<td>
						<%= link_to user.name.capitalize, user_path(user) %>
					</td>
				</tr>
			</table>
		</div>
		</br>
	<% end %>
<% end %>

<% if @groups %>
	<% @groups.each do |group| %>
		<div id="card">
			<table align="center">
				<tr>
					<% if group.icon.url %>
					<td>
						<%= link_to image_tag(group.icon, size: "25x25", id: :profile_picture),
							group_path(group) %>
					</td>
					<% end %>
					<td>
						<%= link_to group.name.capitalize, group_path(group) %>
					</td>
				</tr>
			</table>
		</div>
		</br>
	<% end %>
<% end %>

<% if @tags %>
	<div id="large_button">
		<%= button_to "Follow " + @tags.first.tag, follow_tag_path(@tags.first.id) %>
	</div></br>
	
	<% @tags.each do |tag| %>
		<% if tag.post_id %>
			<% post = tag.item %>
			<%= render "posts/card", post: post %>
		<% end %>
	<% end %>
<% end %>