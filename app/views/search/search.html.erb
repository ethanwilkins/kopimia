<div id="card">
<%= form_tag search_path, :method => "get" do %>
	<p>
		<%= text_field_tag :query, params[:query], placeholder: "Search for tags, groups, or users" %>
		<%= submit_tag "Search" %>
	</p>
<% end %>
</div>
<br>

<%= render "results" %>

<% if @no_results %>
	<div id="card">
		<p align="center"><%= @no_results %></p>
	</div>
<% end %>