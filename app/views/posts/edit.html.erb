<% if current_user %>
	<div id="card">
		<%= form_for @post, url: update_post_path, method: :patch,
			:html => {:multipart => true, "data-ajax" => false} do |f| %>
			<%= hidden_field_tag :post_id, params[:id] %>
			<p>
				<%= f.text_field :text, placeholder: "What's new?", class: "form-control" %>
			</p>
			<p>
				<%= f.file_field :image, class: "form-control" %>
			</p>
			<p>
				<%= f.submit "Update", class: "btn btn-default btn-lg btn-block" %>
			</p>
		<% end %>
	</div>
	<br>
<% end %>