<div id=<%= color_theme("card") %>>
	<table id="user_action_heading">
		<tr>
			<td>
				<%= profile_picture(post.user, "25x25") %>
			</td>
			<td>
				<p id="user_action_text">
					<%= link_to post.user.name, user_path(post.user) %>
					<%= render "posts/user_action", post: post %>
				</p>
			</td>
		</tr>
	</table>
	
	<%= render "posts/content", post: post %>
	
	<div id="post_buttons">
		<div class="btn-group">
			<%= render "posts/vote", post: post %>
			<%= render "posts/share", post: post %>
			<%= render "posts/comment_button", post: post %>
		</div>
	</div>
</div>