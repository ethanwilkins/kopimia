<div id="card">
<%= form_for @user, url: user_path(@user), method: :patch,
	:html => {:multipart => true, "data-ajax" => false} do |f| %>
	<p>
		<%= f.label "Upload a profile picture" %>
		<%= f.file_field :profile_picture, class: "form-control" %>
	</p>
	<p>
		<%= f.label "Change your name" %>
		<%= f.text_field :name, class: "form-control" %>
	</p>
	<p>
		<%= f.label "Describe yourself" %>
		<%= f.text_area :bio, class: "form-control" %>
	</p>
	<p class="form-control">
		<%= f.label :private %>
		<%= f.check_box :private %>
	</p>
	<p>
		<%= f.submit "Update Profile", class: "btn btn-default btn-lg btn-block" %>
	</p>
<% end %>
</div>
<br>

<div id="card">
	<p align="center">
		This site will automatically log you out when you close the browser.
		To log out now, press the button below.
	</p>
	<%= link_to "Log out", sessions_destroy_path,
		data: { confirm: 'Are you sure you want to log out?' },
		class: "btn btn-default btn-lg btn-block" %>
</div></br>


<div id="delete_account_card">
	<div align="center">
		<p>
			Deleting your account will permanently destroy all of your data.
		</p>
		<%= button_to "Delete my account", user_destroy_path(current_user), method: :delete,
			data: { confirm: 'Are you sure you want to permanently delete your account?' },
			class: "btn btn-default btn-lg btn-block" %>
	</div>
</div>