<!-- users -->

<% unless current_user %>
	<div id="card">
		<div id="form_padding">
			<p id="sign_up_label">Sign up</p>
			<%= link_to "Already signed up?", sessions_new_path, id: :already_signed_up %>
			<%= form_for @user do |f| %>
				<p>
					<%= f.text_field :name, placeholder: "Username", class: "form-control" %>
				</p>
				<p>
					<%= f.text_field :email, placeholder: "Email", class: "form-control" %>
				</p>
				<p>
					<%= f.password_field :password, placeholder: "Password", class: "form-control" %>
				</p>
				<div class="input-group">
					<%= f.password_field :password_confirmation, placeholder: "Confirm password", class: "form-control" %>
					<span class="input-group-btn">
						<button class="btn btn-default" type="submit">
							<i class="glyphicon glyphicon-log-in"></i>
						</button>
					</span>
				</div>
			<% end %>
			<div id="remember">
				Remember me <%= check_box_tag :remember_me, 1, params[:remember_me] %>
			</div>
		</div>
	</div>
<% end %>