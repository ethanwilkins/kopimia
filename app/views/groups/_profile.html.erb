<div id="card">
	<h1 align="center"><%= @group.name.capitalize %></h1>
	<div align="center"><%= image_tag @group.icon, width: "90%", id: :profile_picture %></div>
	<p align="center"><%= @group.description %></p>
	
	<div align="center">
		<%= link_to "Members", group_members_path(@group) %>
		|
		<%= link_to "Proposals", group_proposals_path(@group) %>
	</div>
	<br>
	
	<div id="join"><%= render "join" %></div>
</div>
<br>