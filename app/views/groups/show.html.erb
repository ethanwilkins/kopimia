<!-- groups -->

<%= render "profile" %>

<%= render "posts/new", group: @group.id if @group.membership(current_user) %>

<% if @group.membership(current_user) or !@group.private %>
	<%= render "feed" %>
<% end %>

<% if @group.posts.size > page_size and @feed.size >= page_size %>
	<%= render "pages/more" %>
<% end %>