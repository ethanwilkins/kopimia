<table align="center">
	<tr>
		<% if @user.profile_picture.url %>
		<td>
			<%= profile_picture(@user, "50x50") %>
		</td>
		<% end %>
		<td>
			<h1 align="center"><%= @user.name + "'s" %> Groups</h1>
		</td>
	</tr>
</table>

<% @groups.each do |group| %>
<div id="card">
	<table align="center">
		<tr>
			<% if group.icon.url %>
				<td><%= link_to image_tag(group.icon, size: "25x25",
					id: :profile_picture), group_path(group) %></td>
			<% end %>
			<td><%= link_to group.name, group_path(group) %></td>
		</tr>
	</table>
</div>
<br>
<% end %>

<% if @groups.empty? %>
	<div id="card">
		<div align="center">
			<%= link_to @user.name.capitalize, user_path(@user) %> hasn't joined any groups.
		</div>
	</div>
<% end %>