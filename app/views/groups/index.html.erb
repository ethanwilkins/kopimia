<% if current_user %>
	<div id="large_button">
		<%= button_to "Start a group", new_group_path, method: :get,
			class: "btn btn-default btn-lg btn-block" %><br>
	</div>

	<% if @groups %>
		<% for group in @groups %>
			<div id=<%= color_theme("card")%>>
				<div align="center">
					<% if group.icon.url %>
						<%= link_to image_tag(group.icon, size: "50x50",
							id: :profile_picture), group_path(group) %>
					<% end %>
					<div><%= link_to group.name, group_path(group) %></div>
				</div>
			</div>
			<br>
		<% end %>

		<%= render "pages/more_back", all_items: Group.groups_of(current_user), items: @groups %>
	<% end %>
<% else %>
	<div id=<%= color_theme("card")%>>
		<div align="center">
			<%= link_to "Log in", root_url %> or
			<%= link_to "sign up", new_user_path %> to create a group.
		</div>
	</div>
<% end %>