<div id="large_button">
	<%= button_to "Start a group", new_group_path, method: :get,
		class: "btn btn-default btn-lg btn-block" %><br>
</div>

<% @groups.each do |group| %>
	<div id="card">
		<div align="center">
			<% if group.icon.url %>
				<%= link_to image_tag(group.icon, size: "50x50",
					id: :profile_picture), group_path(group) %>
			<% end %>
			<div><%= link_to group.name, group_path(group) %></div>
		</div>
	</div>
	<br>
<% end %>