<!-- groups -->

<table align="center">
	<tr>
		<% if @group.icon.url %>
		<td>
			<%= link_to image_tag(@group.icon, size: "50x50", id: :profile_picture), group_path(@group) %>
		</td>
		<% end %>
		<td>
			<% if @group.name.size < 10 %>
				<h1 align="center"><%= @group.name + " " + item %></h1>
			<% else %>
				<h3 align="center"><%= @group.name + " " + item %></h3>
			<% end %>
		</td>
	</tr>
</table></br>