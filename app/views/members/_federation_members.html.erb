<%= render "federations/name_heading", item: "Groups" %>

<% @groups.each do |group| %>
	<% group = Group.find_by_id(group.federated_group_id) %>
	<div id="card">
		<table align="center">
			<tr>
				<% if group.icon.url %>
					<td><%= link_to image_tag(group.icon, size: "50x50",
						id: :profile_picture), group_path(group) %></td>
				<% end %>
				<td><%= link_to group.name, group_path(group) %></td>
			</tr>
		</table>
	</div>
<% end %>

<% if @groups.empty? %>
	<div id="card">
		<div align="center"><%= link_to @federation.name, federation_path(@federation) %> doesn't have many members yet.</div>
	</div>
<% end %>