<% unless page == :feed_page and Post.from_users_followed_by(current_user).size < page_size %>
	<div class="older_newer">
		<div class="newer">
			<%= link_to(newer_path(page: page), class: :button_link) do %>
				<div class="button_div" align="center">Newer</div>
			<% end %>
		</div>
		<div class="older">
			<%= link_to(older_path(page: page), class: :button_link) do %>
				<div class="button_div" align="center">Older</div>
			<% end %>
		</div>
	</div>
<% end %>