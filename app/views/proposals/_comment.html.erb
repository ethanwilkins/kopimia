<!-- proposals comment button -->

<% if @group %>
	<%= link_to(group_proposal_path(@group, proposal), class: "btn btn-default") do %>
		<span class="glyphicon glyphicon-comment"></span>
	<% end %>
<% elsif @federation %>
	<%= link_to(federation_proposal_path(@federation, proposal), class: "btn btn-default") do %>
		<span class="glyphicon glyphicon-comment"></span>
	<% end %>
<% else %>
	<%= link_to(proposal_path(proposal), class: "btn btn-default") do %>
		<span class="glyphicon glyphicon-comment"></span>
	<% end %>
<% end %>