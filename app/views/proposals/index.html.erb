<!-- proposals -->

<% if current_user %>
<div id="large_button">
	<%= button_to "Create a proposal", proposal_menu_path(@group),
		method: :get, class: "btn btn-default btn-lg btn-block" %><br>
</div>
<% end %>

<% @proposals.each do |proposal| %>
	<div id="card">
		<%= render "user_action", proposal: proposal %>
		
		<%= render "content", proposal: proposal %>
		
		<table align="center">
			<tr>
				<%= render "vote", proposal: proposal %>
				<td>
					<%= link_to(group_proposal_path(@group, proposal), class: :button_link) do %>
						<div class="button_div">Comment</div>
					<% end %>
				</td>
			</tr>
		</table>
	</div>
	<br>
<% end %>

<% if @proposals.empty? %>
	<div id="card">
		<div align="center">
			<%= link_to @group.name, group_path(@group) %> doesn't have any proposals yet.
			To create one, click <%= link_to "here", proposal_menu_path(@group) %>.
		</div>
	</div>
<% end %>