<!-- proposals -->

<div id="card">
	<% if @group %>
		<%= render "user_action", proposal: @proposal %>
	<% elsif @federation %>
		<%= render "federated_user_action", proposal: @proposal %>
	<% end %>
	
	<%= render "content", proposal: @proposal %>
	
	
	
	<% if (@federation or @group.membership(current_user)) \
		and current_user.id != @proposal.user_id %>
		<div align="center">
			<div class="btn-group">
				<%= render "vote", proposal: @proposal %>
			</div>
		</div>
	<% end %>
</div>
<br>

<%= render "comments/new", item: :proposal %>

<%= render "comments" %>

