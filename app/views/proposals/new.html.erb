<% flash.each do |key, message| %>
	<div id="card"><p align="center"><%= message %></p></div></br>
<% end %>

<div id="card">
<%= form_for @proposal, :html => {:multipart => true, "data-ajax" => false} do |f| %>
	<%= hidden_field_tag :group_id, params[:group_id] %>
	<%= hidden_field_tag :user_id, current_user.id %>
	<p>
		<%= f.label "Choose a proposal type"%>
		<%= f.select :action,
			options_for_select([["Proposal type", nil], ["Description change", "description_change"], 
			["Make group private", "private_group"], ["Make group public", "public_group"],
			["Name change", "name_change"], ["Icon change", "icon_change"], ["Other", "other"]]) %>
	</p>
	
	<p>
		<%= f.text_field :submission, placeholder: "Submission text" %>
	</p>
	
	<p>
		<%= f.file_field :icon %>
	</p>
	
	<p>
		<%= f.text_area :description, placeholder: "Explain why" %>
	</p>

	<p>
		<%= f.label :anonymous %>
		<%= f.check_box :anonymous %>
	</p>
	
	<p>
		<%= f.submit "Create proposal" %>
	</p>
<% end %>
</div>