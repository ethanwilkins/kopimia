<div id="card">
	<table align="center">
		<tr>
			<td><%= profile_picture(comment.commenter, "25x25") %></td>
			<td>
				<%= link_to comment.commenter.name, user_path(comment.commenter) %>
				<%= comment.text %>
				<% comment.hashtags.each do |tag| %>
					<%= link_to tag.tag, tagged_path(tag.tag) %>
				<% end %>
			</td>
		</tr>
	</table>
	<!-- controls for comment -->
	<table align="center">
		<tr>
			<% if current_user and current_user.id != comment.commenter_id %>
				<td>
					<%= link_to(up_vote_comment_path(comment), class: :button_link) do %>
						<div class="button_div">Yes</div>
					<% end %>
				</td>
				<td>
					<%= link_to(down_vote_comment_path(comment), class: :button_link) do %>
						<div class="button_div">No</div>
					<% end %>
				</td>
			<% end %>
		</tr>
	</table>
</div><br>