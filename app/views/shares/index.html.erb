<!-- shares -->

<table align="center">
	<tr>
		<% if @group.icon.url %>
		<td>
			<%= link_to image_tag(@group.icon, size: "50x50", id: :profile_picture), group_path(@group) %>
		</td>
		<% end %>
		<td>
			<% if @group.name.size < 15 %>
				<h1 align="center"><%= @group.name %> Shares</h1>
			<% else %>
				<h3 align="center"><%= @group.name %> Shares</h3>
			<% end %>
		</td>
	</tr>
</table></br>

<% if current_user %>
	<div id="large_button">
		<%= link_to "Offer something to share", new_group_share_path(@group),
			class: "btn btn-default btn-lg btn-block" %>
	</div><br>
<% end %>

<% for share in @shares %>
	<%= render "shares/card", share: share %>
<% end %>