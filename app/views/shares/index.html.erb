<!-- shares -->

<%= render "groups/name_heading" if @group %>

<%= render "federations/name_heading" if @federation %>

<% if current_user %>
	<div id="large_button">
		<% if @group %>
			<%= link_to "Offer something to share", new_group_share_path(@group),
				class: "btn btn-default btn-lg btn-block" %>
		<% elsif @federation %>
			<%= link_to "Offer something to share", new_federation_share_path(@federation),
				class: "btn btn-default btn-lg btn-block" %>
		<% end %>
	</div><br>
<% end %>

<% for share in @shares %>
	<%= render "shares/card", share: share %>
<% end %>