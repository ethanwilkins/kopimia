<!-- shares -->

<% if current_user %>
	<div id="card">
		<%= form_for @share, :html => {:multipart => true, "data-ajax" => false} do |f| %>
			<%= hidden_field_tag :group_id, params[:group_id] %>
			<p>
				<%= f.text_field :name, placeholder: "Name", class: "form-control" %>
			</p>
			<p>
				<%= f.text_area :description, placeholder: "Description", class: "form-control" %>
			</p>
			<p>
				<%= f.file_field :image, class: "form-control" %>
			</p>
			<p>
				<%= f.select :open,
					options_for_select([["Open or Closed", nil], ["Open (anyone can partake)", true],
					["Closed (active contributors only)", false]]), {}, { class: "form-control" } %>
			</p>
			<p>
				<%= f.submit "Share", class: "btn btn-default btn-lg btn-block" %>
			</p>
		<% end %>
	</div>
	<br>
<% end %>